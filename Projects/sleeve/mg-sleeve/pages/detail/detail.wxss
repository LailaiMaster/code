.tabbar {
    position: fixed;
    bottom: 0;
}

.top {
    width: 100%;
    height: 680rpx;
}

.sku-pending {
    box-sizing: border-box;
    width: 100%;
    height: 80rpx;
    background-color: #ffffff;
    margin: 10rpx 0;
    display: flex;
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    font-size: 28rpx;
    color: #333333;
    padding: 0 30rpx;
}

.specs > text:first-child {
    color: #999999;
    font-size: 24rpx;
}

.specs > text:nth-child(2) {
    font-size: 24rpx;
    color: #157658;
}

.explain {
    margin-top: 10rpx;
    background-color: #ffffff;
    padding-bottom: 20rpx;
    padding-top: 20rpx;
    display: flex;
    flex-direction: row;
    align-items: center;
    justify-content: center;
}

.detail-img-container {
    /*防止被 tab-bar 盖住，但是滚动条的滑动到 margin 区域。*/
